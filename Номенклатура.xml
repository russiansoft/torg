		<!--<row/>
		<row indent="1" text="Код"/>
		<cell bind="Код" outline="2"/>-->

		<row/>
		<row indent="1" text="Цена"/>
		<cell bind="Цена"/>

		<!--<row/>
		<row indent="1" text="В наличии"/>
		<cell bind="Остаток" outline="2"/>-->

		<row/>
