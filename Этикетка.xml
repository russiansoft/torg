<?xml version="1.0" encoding="utf-8"?>

<unit name="Этикетка">
	
	<type name="Этикетка" title="Этикетка" scope="global" report="1">
		<field.ref name="Номенклатура" type="Номенклатура"/>
		<field.string name="Наименование"/>
		<field.string name="Код"/>
		<field.blob name="ИзображениеКуаркода"/>
		
		<constructor>
			<function name="Номенклатура">
				<get field="parent"/>
			</function>
			<function name="Наименование">
				<get field="Номенклатура.Наименование"/>
			</function>
			<function name="Код">
				<get field="Номенклатура.Код"/>
			</function>
			<function name="ИзображениеКуаркода">
				<get field="Номенклатура.ИзображениеКуаркода"/>
			</function>
		</constructor>
		
		
		<access.allow role="Администратор"/>
	</type>
	
	<form name="Этикетка">
		<column width="2"/>
		<column width="10"/>
		<column width="2"/>
		<column width="30"/>
		<column width="2"/>
		<column width="2"/>
		
		<bar/>
		<bar indent="1" cols="5">
			<button name="Print" text="🖨 Печать" title="Открыть печатную форму"/><label text=" "/>
		</bar>
		<bar/>
		
		<row cols="5" border="1101"/>
		
		<row border="0001"/>
		<cell bind="ИзображениеКуаркода" cols="1" rows="4">
			<image/>
		</cell> 
		<cell/>
		<cell text="СВАРОПТТОРГ" align="center"/><cell border="0100"/>
		
		<row border="0001" cols="3"/>
		<cell bind="Наименование"  align="center"/><cell border="0100"/>
		
		<row cols="5" border="0101"/>
		<row border="0001" cols="3"/>
		<cell bind="Код" font="EanGnivc" size="22" align="center"/><cell border="0100"/>
		<row cols="5" border="0111"/>
	</form>
</unit>
