<?xml version="1.0" encoding="utf-8"?>

<unit name="Корзина">
	
	<type name="Покупка" scope="global">
		<field.ref name="Номенклатура" type="Номенклатура" title="Номенклатура" width="30"/>
		<field.string name="Пользователь" title="Пользователь" width="20"/>
		
		<constructor>
			<function name="Пользователь">
				<account/>
			</function>
		</constructor>
		
		<index name="Покупка">
			<key field="Пользователь"/>
			<key field="Номенклатура"/>
		</index>
	</type>
	
	<type name="Корзина" title="Корзина" scope="global" report="1">
		<field.string name="Пользователь"/>
		<field.number name="Сумма" precision="2"/>
		<field.array name="Строки" type="Строка"/>

		<constructor>
			<function name="Пользователь">
				<account/>
			</function>
			
			<query name="Строки">
				<select from="Покупка">
					<filter by="Пользователь" field="Пользователь"/>
					<get field="Номенклатура" as="Номенклатура"/>
				</select>
			</query>
		</constructor>
		
		<function name="title">
		</function>

		<function name="Сумма">
			<get value="5"/>
		</function>
		
		<index name="Корзина">
		</index>
	</type>

	<type name="Строка">
		<field.ref name="Номенклатура" type="Номенклатура" title="Номенклатура"/>
		<field.number name="Количество" title="Количество"/>
		<field.number name="НовоеКоличество"/>
		
		<constructor>
			<function name="Количество">
				<get value="1"/>
			</function>
		</constructor>
		
		<state name="Минус">
			<query>
				<update into="Покупка">
					
				</update>
			</query>
			<function name="НовоеКоличество">
				<if>
					<greater>
						<get field="Количество"/>
						<get value="0"/>
					</greater>
					<dec>
						<get field="Количество"/>
					</dec>
					<get field="Количество"/>
				</if>
			</function>
			<function name="УстановкаНовогоКоличества">
				<true/>
			</function>
		</state>
		
		<state name="Плюс">
			<query>
				<update into="Покупка">
					
				</update>
			</query>
			<function name="НовоеКоличество">
				<inc>
					<get field="Количество"/>
				</inc>
			</function>
			<function name="УстановкаНовогоКоличества">
				<true/>
			</function>
		</state>
		
		<state name="УстановкаНовогоКоличества">
			<function name="Количество">
				<get field="НовоеКоличество"/>
			</function>
		</state>
	</type>

	<form name="Корзина">
		<column width="2"/>
		<column width="50"/>
		<column width="16"/>
		<column width="20"/>

		<row/>
		<row indent="1" cols="2">
			<button name="ОформитьЗаказ" text="Оформить заказ"/>
		</row>

		<row/>
		<row indent="1" text="Сумма: 0 руб." bold="1"/>

		<row/>
		<row/>
		<cell text="Номенклатура" align="center" color="009646"/>
		<cell text="Количество" align="center" color="009646"/>
		<nest field="Строки"/>
	</form>

	<form name="Корзина-Строка">
		<!--<line/>-->
		<row/>
		<row/>
		<cell bind="Номенклатура" wrap="1"/>
		<cell bind="Количество">
			<button name="Минус" text="-" title="Уменьшить"/>
			<label text="  " grow="1"/>
			<edit/>
			<!--<tool type="calculator"/>-->
			<label text=" " grow="1"/>
			<button name="Плюс" text="+" title="Увеличить"/>
		</cell>
		<!--<cell>
			<label text="    "/>
			<button name="Строка.Удалить" text="🗑" title="Удалить"/>
		</cell>-->
	</form>
</unit>
